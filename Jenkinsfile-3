pipeline {
    agent any
    environment {
        CC = 'clang'
    }
    stages {
        stage('Example') {
            environment {
                DEBUG_FLAGS = '-g'
            }
            steps {
                bat 'echo "printenv"'
                bat 'echo "${env.CC}"   "${env.DEBUG_FLAGS}"'
                 
            }
        }
    }
}
